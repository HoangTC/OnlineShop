@model IEnumerable<OnlineShop.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Category</h2>
<div class="row">
    <div class="col-md-2">
        <ul>
            @foreach (var item in ViewBag.ListCategory)
            {
                <li><a href="@Url.Action("List","Home", new { id = item.CategoryId})">@item.Name</a></li>
            }
        </ul>
    </div>
    <div class="col-md-2">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageData)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Details", "Products", new { id=item.Id })">@Html.DisplayFor(modelItem => item.Name)</a>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <img style="max-height: 50px; max-width: 50px;" src="~/Content/Images/@item.ImageData" alt="Image" />
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


